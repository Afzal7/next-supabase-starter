{
	"$schema": "https://biomejs.dev/schemas/2.3.5/schema.json",
	"files": {
		"includes": [
			"app/**",
			"lib/**",
			"components/**",
			"!components/animate-ui",
			"types/**",
			"config/**",
			"hooks/**",
			"utils/**",
			"*.ts",
			"*.tsx",
			"*.js",
			"*.jsx",
			"*.json",
			"*.css"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
